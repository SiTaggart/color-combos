{
  "name": "color-combos",
  "version": "0.0.0-development",
  "description": "Get accessibility information about colour combinations",
  "entry": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:dev": "yarn clean && yarn compile:dev",
    "bundlesize": "bundlesize",
    "clean": "rm -rf ./dist",
    "compile": "rollup -c rollup.config.ts --environment NODE_ENV:production",
    "compile:dev": "rollup -c rollup.config.ts --environment NODE_ENV:development",
    "eslint": "eslint --ext .tsx,.ts,.js ./src",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js}'",
    "prettier-clean": "prettier --write '**/*.{ts,tsx,js}'",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SiTaggart/color-combos.git"
  },
  "keywords": [
    "accessibility",
    "color",
    "a11y"
  ],
  "author": "Simon Taggart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SiTaggart/color-combos/issues"
  },
  "homepage": "https://github.com/SiTaggart/color-combos#readme",
  "dependencies": {
    "color": "3.1.2",
    "lodash.uniq": "4.5.0"
  },
  "devDependencies": {
    "@sitaggart/eslint-config-ts": "0.5.92",
    "@sitaggart/prettier-config": "0.2.0",
    "@types/color": "3.0.1",
    "@types/eslint": "6.8.0",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.149",
    "@types/lodash.uniq": "4.5.6",
    "@types/node": "12.12.35",
    "bundlesize": "0.18.0",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "precise-commits": "1.0.2",
    "prettier": "2.0.4",
    "rollup": "2.6.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-typescript2": "0.27.0",
    "semantic-release": "17.0.4",
    "ts-jest": "25.3.1",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "maxSize": "11 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits"
    }
  }
}
