{
  "name": "color-combos",
  "version": "0.0.0-development",
  "description": "Get accessibility information about colour combinations",
  "entry": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:dev": "yarn clean && yarn compile:dev",
    "bundlesize": "bundlesize",
    "clean": "rm -rf ./dist",
    "compile": "rollup -c rollup.config.ts --environment NODE_ENV:production",
    "compile:dev": "rollup -c rollup.config.ts --environment NODE_ENV:development",
    "eslint": "eslint --ext .tsx,.ts,.js ./src",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js}'",
    "prettier-clean": "prettier --write '**/*.{ts,tsx,js}'",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SiTaggart/color-combos.git"
  },
  "keywords": [
    "accessibility",
    "color",
    "a11y"
  ],
  "author": "Simon Taggart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SiTaggart/color-combos/issues"
  },
  "homepage": "https://github.com/SiTaggart/color-combos#readme",
  "dependencies": {
    "color": "3.1.3",
    "lodash.uniq": "4.5.0"
  },
  "devDependencies": {
    "@sitaggart/eslint-config-ts": "0.5.250",
    "@sitaggart/prettier-config": "0.2.45",
    "@types/color": "3.0.1",
    "@types/eslint": "7.2.6",
    "@types/jest": "26.0.20",
    "@types/lodash": "4.14.167",
    "@types/lodash.uniq": "4.5.6",
    "@types/node": "14.14.20",
    "bundlesize": "0.18.0",
    "eslint": "7.17.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "precise-commits": "1.0.2",
    "prettier": "2.2.1",
    "rollup": "2.36.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.29.0",
    "semantic-release": "17.3.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "maxSize": "11 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits"
    }
  },
  "release": {
    "branches": ["main"]
  }
}
